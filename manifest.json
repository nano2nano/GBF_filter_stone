{
    "name": "GBF_summon_filter",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Filter summons list",
    "browser_action": {
        "default_popup": "./popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://game.granbluefantasy.jp/"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "notifications",
        "background",
        "webRequest",
        "nativeMessaging",
        "*://*.granbluefantasy.jp/"
    ],
    "devtools_page": "devtools.html"
}